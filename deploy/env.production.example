# Copy to `.env.production` on the production host.
# NOTE: do not commit real secrets.

# --- Core ---
APP_ENV=production
NODE_ENV=production
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DB?schema=public
JWT_SECRET=replace_me

# CORS (comma-separated)
FRONTEND_ORIGINS=https://app.socialmore.jp

# Optional fallback used by some redirects
FRONTEND_BASE_URL=https://app.socialmore.jp
FRONTEND_BASE_URL_LIVE=https://app.socialmore.jp

# --- LINE ---
LINE_CHANNEL_ID=replace_me
LINE_CHANNEL_SECRET=replace_me
LINE_REDIRECT_URI=https://app.socialmore.jp/api/v1/auth/line/callback

# --- Stripe (LIVE) ---
STRIPE_API_VERSION=2025-12-15.preview
STRIPE_SECRET_KEY_LIVE=sk_live_replace_me
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_replace_me
STRIPE_WEBHOOK_SECRET_LIVE=whsec_replace_me

# Optional (enable onboarding links)
STRIPE_ONBOARDING_REFRESH_URL=https://app.socialmore.jp/console/stripe-return
STRIPE_ONBOARDING_RETURN_URL=https://app.socialmore.jp/console/stripe-return

# --- Frontend (Vite build-time) ---
# These must be present when building the frontend image.
VITE_API_BASE_URL=https://app.socialmore.jp/api/v1
VITE_APP_TARGET=web
VITE_APP_ENV=production
VITE_LINE_CHANNEL_ID=replace_me
VITE_LIFF_ID=replace_me

